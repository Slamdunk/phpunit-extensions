{
    "name": "slam/phpunit-extensions",
    "description": "Slam extensions for phpunit/phpunit",
    "license": "MIT",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "phpunit/phpunit": "^6.5"
    },
    "require-dev": {
        "slam/php-cs-fixer-extensions": "^1.11",
        "slam/php-debug-r": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Slam\\PHPUnit\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slam\\PHPUnit\\Tests\\": "tests/"
        },
        "classmap": ["tests/TestAsset/ValidPsr0/"]
    }
}
